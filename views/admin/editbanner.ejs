<%- include("partials/adminHeader.ejs") -%> 


   
    <div class="row">
      <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
        <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
          <div class="row">
            <div class="col-12">
              <h2 class="tm-block-title d-inline-block">Add Banner</h2>
            </div>
          </div>
          <div class="row tm-edit-product-row">
            <div class="col-xl-6 col-lg-6 col-md-12">
              <form action="/admin/editBanners/<%-banner._id %>" method="post" class="tm-edit-product-form" id="form" enctype="multipart/form-data" >
                <div class="form-group mb-3">
                  <label
                    for="name"
                    >Title 
                  </label>
                  <input
                    id="name"
                    name="title"
                    type="text"
                    class="form-control validate"
                    value="<%=banner.title%> "
                    required
                  />
                </div>
              
                <div class="form-group mb-3">
                  <label
                    for="description"
                    >Description</label
                  >
                  <textarea
                    class="form-control validate"
                    rows="3"
                    name="description"
                    value="<%=banner.description%>"
                    required
                  ></textarea>
                </div>
                <div class="form-group mb-3">
                    <label
                      for="name"
                      >url
                    </label>
                    <input
                      id="name"
                      name="url"
                      type="text"
                      class="form-control validate"
                      value="<%=banner.url%>"
                      required
                    />
                  </div>
                
               
                    
                
            </div>
            <div class="col-xl-6 col-lg-6 col-md-12 mx-auto mb-4">
              <div class="tm-product-img-dummy mx-auto" style="margin-top: 35px;">
                <i
                  class="fas fa-cloud-upload-alt tm-upload-icon"
                  onclick="document.getElementById('fileInput').click();"
                ></i>
              </div>
              <div class="custom-file mt-3 mb-3">
                <input id="fileInput" type="file" style="display:none;" name="image" multiple />
                <input
                  type="button"
                  class="btn btn-primary btn-block mx-auto"
                  value="<%=banner.image%>"
                  onclick="document.getElementById('fileInput').click();"
                />
               
               
              </div>
              <br>
             
            </div>
            
            <div class="col-12">
              
              <button type="submit" class="btn btn-primary btn-block text-uppercase" >Edit Banner</button>
            </div>
          </form>
          </div>
        </div>
      </div>
    </div>
  </div>
