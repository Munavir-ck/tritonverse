<%- include("partials/adminHeader.ejs") -%>
    <div class="container mt-5">
        <div class="row tm-content-row">
            <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12 tm-block-col">
                <div class="tm-bg-primary-dark tm-block tm-block-products">
                    <div class="tm-product-table-container">
                        <table class="table table-hover tm-table-small tm-product-table">
                            <thead>
                                <tr>
                                    <th scope="col">Coupen Code</th>
                                    <th scope="col">Status</th>
                                   <th scope="col">Coupen value</th>
                                   <th scope="col">Cart value</th>
                                    <th scope="col">Expire Date</th>
                                    <th scope="col">Available</th>
                                    <th scope="col">Action</th>

                                </tr>
                            </thead>
                            <tbody>

                               <% for( let i = 0; i <allCoupens.length; i++ ) { %>
                               
                                <tr id="coupen<%=allCoupens[i].id%>">
                                   
                                    <td class="tm-product-name"><%=allCoupens[i].coupenCode %>    </td>

                                    <td>   <%=allCoupens[i].status %>    </td>
                                    <td>  <%=allCoupens[i].coupenValue %>  </td>


                                    <td> <%=allCoupens[i].cartValue %></td>
                                    <td> <%=allCoupens[i].expireDte.toLocaleDateString()%></td>
                                    <td> <%=allCoupens[i].available%></td>

                                    
                                    


                                    <td>
                                        <button href="/admin/coupen" type="button" class="tm-product-delete-link" onclick="deleteCoupen(`<%=allCoupens[i].id%>`)">
                                            <i class="far fa-trash-alt tm-product-delete-icon"></i>
                                        </button>
                                    </td>
                                </tr>
                               
                               
                                <% } %>

                            </tbody>
                        </table>
                    </div>
                    <!-- table container -->
                    <div class="col-12">
                         <a href="/admin/viewaddCoupen">
                        <button type="submit" class="btn btn-primary btn-block text-uppercase">Add Coupen</button>
                    </a>
                      </div>
                   
                </div>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-4 col-xl-4 tm-block-col">

            </div>
        </div>
    </div>
    <script
    src="https://code.jquery.com/jquery-3.6.3.js"
    integrity="sha256-nQLuAZGRRcILA+6dMBOvcRh5Pe310sBpanc6+QBmyVM="
    crossorigin="anonymous"></script>
  
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script>
 function deleteCoupen(coupenID){
   console.log(121212121212);
swal({
title: "Are you sure?",
text: "Once deleted, you will not be able to recover this imaginary file!",
icon: "warning",
buttons: true,
dangerMode: true,
})
.then((willDelete) => {

$.ajax({ 
url:`/admin/coupen?dltID=${coupenID}`,
method:"delete",
success:((res)=>{
   if(res.status){
   document.getElementById("coupen"+coupenID).remove()
   }




})})

if (willDelete) {
swal("Poof! Your imaginary file has been deleted!", {
  icon: "success",
});
} else {
swal("Your imaginary file is safe!");
}
});



}
    </script>
    <%- include("partials/adminFooter.ejs") -%>