<%- include("partials/adminHeader.ejs") -%>
    <div class="container tm-mt-big tm-mb-big">
        <div class="row">
            <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
                <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
                    <div class="row">
                        <div class="col-12">
                            <h2 class="tm-block-title d-inline-block">Edit Product</h2>
                        </div>
                    </div>
                    <div class="row tm-edit-product-row">
                        <!-- <div id="alert"></div> -->
                        <div class="col-xl-6 col-lg-6 col-md-12">
                            <form action="/admin/updateProduct/<%=data.id -%> " class="tm-edit-product-form"
                                method="post" enctype="multipart/form-data">
                                <div class="form-group mb-3">
                                    <label for="name">Product Name
                                    </label>
                                    <input id="name" name="name" type="text" class="form-control validate"
                                        value="<%=data.name%>" required />
                                </div>
                                <div class="form-group mb-3">
                                    <label for="name">Price
                                    </label>
                                    <input id="name" name="price" type="text" class="form-control validate"
                                        value="<%=data.price %> " required />
                                </div>
                                <div class="form-group mb-3">
                                    <label for="description">Description</label>
                                    <input class="form-control validate" rows="3" name="description"
                                        value="<%=data.discription %> " required></input>
                                </div>
                                <div class="form-group mb-3">
                                    <label for="category">Category</label>
                                    <select class="custom-select tm-select-accounts" id="category" name="category">
                                        <option  selected><%=category.name%> </option>


                                        <% for( let i=0; i < listCategory.length; i++ ) { %>
                                           <% if (category.name==listCategory[i].name) { %>
                                            
                                          
                                           <% } else { %>
                                           
                                            <option value="<%= listCategory[i]._id %>" required>
                                                <%= listCategory[i].name %>
                                            </option>
                                                <%  } %> 
                                            <% } %>


 



                                    </select>
                                </div>
                                <div class="row">
                                    <div class="form-group mb-3 col-xs-12 col-sm-6">
                                        <label for="expire_date"> Date
                                        </label>
                                        <input id="expire_date" name="date" type="text" class="form-control validate"
                                            value="<%=data.Date %> " data-large-mode="true" />
                                    </div>
                                    <div class="form-group mb-3 col-xs-12 col-sm-6">
                                        <label for="stock">Quantity
                                        </label>
                                        <input id="stock" name="Quantity" type="text" class="form-control validate"
                                            value="<%=data.quantity %> " required />
                                    </div>
                                </div>

                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-12 mx-auto mb-4" style="padding-top: 35px;">

                            <div class="custom-file mt-3 mb-3">
                                <h5 style="color: white; font-size: initial; margin-top: 15px;">ADD IMAGE</h2>

                                    <input class="btn btn-primary btn-block mx-auto" type="file" name="image" multiple>


                            </div>

                            <div class="custom-file mt-3 mb-3">
                                <h5 style="color: white;font-size: initial;margin-top: 15px;">ADD IMAGE</h2>

                                    <input class="btn btn-primary btn-block mx-auto" type="file" name="image" multiple>


                            </div>

                            <div class="custom-file mt-3 mb-3">
                                <h5 style="color: white;font-size: initial;margin-top: 15px;">ADD IMAGE</h2>

                                    <input class="btn btn-primary btn-block mx-auto" type="file" name="image" multiple>


                            </div>



                        </div>





                        <div class="form-group mb-3 col-xs-12 col-sm-6" style="margin-top: 14px;">
                            <label for="stock">Discount
                            </label>
                            <input id="stock" name="Discount" type="text" class="form-control validate"
                                value="<%=data.discount%> " />
                        </div>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary btn-block text-uppercase">Update Product
                            Now</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>
  
